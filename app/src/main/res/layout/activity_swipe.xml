<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#F8ECEC">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/button_pass"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:contentDescription="Pass"
        android:background="@android:color/transparent"
        android:src="@drawable/pass"
        android:scaleType="fitCenter"
        app:tint="@null"
        />

    <ImageButton
        android:id="@+id/button_like"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Like"
        android:src="@drawable/like"
        android:scaleType="fitCenter"
        app:tint="@null"
        />


    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="390dp"
        android:text="No more profiles"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/subMessage"
        android:layout_width="397dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="305dp"
        android:text="You've seen all available pets for now. Check back later!"
        android:textSize="15sp"
        android:visibility="gone"/>


</RelativeLayout>

