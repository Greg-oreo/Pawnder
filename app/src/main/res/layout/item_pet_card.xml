<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#F8ECEC">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="121dp"
        android:layout_height="82dp"
        android:layout_marginTop="68dp"
        android:contentDescription="App Logo"
        android:src="@drawable/pawnder_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/petImage"
        android:layout_width="386dp"
        android:layout_height="281dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_logo"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        />

    <!-- Pet Name -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/petGender"
        android:layout_width="92dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/petImage" />

    <TextView
        android:id="@+id/petName"
        android:layout_width="167dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:text="Pet Name, Age"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/petImage" />

    <!-- Pet Breed -->
    <TextView
        android:id="@+id/petBreed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Breed"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/petName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Pet Location -->
    <TextView
        android:id="@+id/petLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="14sp"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintTop_toBottomOf="@id/petBreed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Pet Temperament -->
    <TextView
        android:id="@+id/petTemperament"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Temperament: Friendly"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/petLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Pet Description -->
    <TextView
        android:id="@+id/petDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loves kids and playing fetch."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/petTemperament"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
