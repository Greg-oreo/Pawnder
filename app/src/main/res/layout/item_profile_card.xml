<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="#F8ECEC"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Info -->
            <TextView
                android:text="User Info"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#6D3B2D"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/userImagePager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alex, 25"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Austin, TX"
                android:textSize="16sp"
                android:textColor="#555" />

            <TextView
                android:id="@+id/userBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Dog dad looking to meet fellow pet lovers!"
                android:textSize="15sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <!-- Pet Info -->
            <TextView
                android:text="Pet Info"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#6D3B2D"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/petImagePager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false" />

            <ImageView
                android:id="@+id/petGender"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:contentDescription="Pet Gender Icon"
                android:src="@drawable/male" />

            <TextView
                android:id="@+id/petName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buddy, 3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/petBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Golden Retriever"
                android:textSize="16sp"
                android:textColor="#555" />

            <TextView
                android:id="@+id/petLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Austin, TX"
                android:textSize="16sp"
                android:textColor="#555" />

            <TextView
                android:id="@+id/petTemperament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperament: Friendly"
                android:textSize="15sp"
                android:textColor="#777" />

            <TextView
                android:id="@+id/petDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Loves to fetch tennis balls and nap on the couch."
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
